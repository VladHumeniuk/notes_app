<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="masters.vlad.humeniuk.notesviper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".presentation.NotesApplication"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.main.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.createnote.CreateNoteActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".presentation.editnote.EditNoteActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".presentation.createcategory.CreateCategoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.editcategory.EditCategoryActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>